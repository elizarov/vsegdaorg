<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>alert</servlet-name>
    <servlet-class>org.vsegda.AlertServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>data</servlet-name>
    <servlet-class>org.vsegda.DataServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>message</servlet-name>
    <servlet-class>org.vsegda.MessageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>alert</servlet-name>
    <url-pattern>/alert</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>data</servlet-name>
    <url-pattern>/data.csv</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>message</servlet-name>
    <url-pattern>/message.csv</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
